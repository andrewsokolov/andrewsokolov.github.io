.features-container
    each feature, index in features
        .feature-item.col-md-3.col-md-offset-0.col-sm-6.col-sm-offset-0.col-xs-10.col-xs-offset-1(id=feature.id)
            h4.
                #{feature.title}
            p.
                #{feature.desc}
        if (index+1) % 2 == 0
          .clearfix.hidden-lg.hidden-md.hidden-xs
        if (index+1) % 4 == 0
          .clearfix.hidden-sm.hidden-xs
    .clearfix