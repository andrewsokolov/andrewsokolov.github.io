html
  head
    title.
       #{seo.title} #{seo.title_suffix}
    meta(name="description", content=seo.description)
    meta(name="keywords", content=seo.keywords)
    meta(http-equiv="content-type", content="text/html; charset=utf-8")
    link(href=favicon_url, rel="shortcut icon", type="image/x-icon")

    block styles
      link(href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css", rel="stylesheet")
      link(href="../less/main.css", rel="stylesheet")

    include ./ga.jade

  body
    block header
    block content
    block foot
      include ./foot.jade
    block scripts
      script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js")
      script(src="https://paddle.s3.amazonaws.com/checkout/checkout.js", async=true)
      script(src="../coffee/main.js")
